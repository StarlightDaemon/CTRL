{
  "name": "ctrl-extension",
  "displayName": "CTRL - Torrent Control",
  "description": "Torrent Control Reloaded - Modern Torrent Management",
  "private": true,
  "version": "0.2.0-beta.1",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "clean": "rm -rf builds/ .wxt/",
    "backup": "tsx scripts/backup.ts",
    "build": "npm run clean && npm run build:chrome && npm run build:firefox && npm run backup",
    "build:chrome": "tsx scripts/generate-build-info.ts && wxt build -b chrome",
    "build:all": "npm run build",
    "build:firefox": "tsx scripts/generate-build-info.ts && wxt build -b firefox --mv3",
    "zip": "wxt zip",
    "zip:chrome": "wxt zip -b chrome",
    "zip:firefox": "wxt zip -b firefox --mv3",
    "compile": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "postinstall": "wxt prepare",
    "extract-i18n": "formatjs extract 'src/**/*.{ts,tsx}' --out-file public/_locales/en/messages.json --format scripts/chrome-formatter.js"
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.13.12",
    "clsx": "^2.1.1",
    "lucide-react": "^0.555.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intl": "^7.1.14",
    "reflect-metadata": "^0.2.2",
    "tailwind-merge": "^3.4.0",
    "tsyringe": "^4.10.0",
    "txml": "^5.2.1",
    "zod": "^3.23.8",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@floating-ui/react": "^0.27.16",
    "@formatjs/cli": "^6.7.4",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.0.268",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.10.2",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^5.1.1",
    "@webext-core/fake-browser": "^1.3.2",
    "@wxt-dev/module-react": "^1.1.5",
    "autoprefixer": "^10.4.19",
    "babel-plugin-formatjs": "^10.5.41",
    "babel-plugin-react-component-data-attribute": "^0.6.0",
    "fs-extra": "^11.3.2",
    "jsdom": "^27.3.0",
    "postcss": "^8.4.38",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.3",
    "tsx": "^4.21.0",
    "typescript": "^5.4.5",
    "vite-plugin-react-inspector": "^0.3.3",
    "vitest": "^4.0.15",
    "wxt": "^0.19.0"
  }
}